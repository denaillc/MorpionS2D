                        switch (choix) {
				case "1": {
                                            setChanged();
                                            notifyObservers(Validation.ListeJoueurs);
                                            clearChanged();
                                        break; }
				case "2": {
                                            setChanged();
                                            notifyObservers(Validation.LancerPartie);
                                            clearChanged();
                                        break;}
				case "3": {
                                            System.exit(0);
                                        break;}
                                case "0":
                                        return;
				default:
                                       System.out.println("Choix non valide");
                                       break;
				} // switch
                        } while (choix != "0");
